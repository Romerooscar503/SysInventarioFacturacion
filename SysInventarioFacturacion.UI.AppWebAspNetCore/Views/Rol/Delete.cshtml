@model SysInventarioFacturacion.EntidadesDeNegocio.Rol

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar Rol</h1>

<h3>¿ Esta seguro que desea eliminar ?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
